\mode<presentation>

% color definitions
\definecolor{uigray}{RGB}{217, 217, 217}
\definecolor{uigreen}{RGB}{96, 147, 115}
\definecolor{uigreen_dark}{RGB}{31, 39, 42}

% footer styling
\setbeamercolor{section in footer}{fg=uigreen_dark,bg=uigray}
\setbeamercolor{subsection in footer}{fg=uigreen_dark,bg=uigray}
\setbeamercolor{pagenumber in footer}{fg=uigreen_dark,bg=uigray}

\defbeamertemplate*{footline}{jdtheme}
{
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=.33\paperwidth,ht=2.25ex,dp=1ex,left]{section in footer}%
    \hspace*{1ex} \inserttitle
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.34\paperwidth,ht=2.25ex,dp=1ex,center]{subsection in footer}%
    \insertsectionhead
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.34\paperwidth,ht=2.25ex,dp=1ex,right]{pagenumber in footer}%
   \insertframenumber{} / \inserttotalframenumber\hspace*{3ex} 
  \end{beamercolorbox}}%
  \vskip0pt%
}


\setbeamersize{text margin left=1em,text margin right=1em}

\mode
<all>
